//Layout Color
lColor = #222

brand = #319C96
brand1 = #91C9ED
brand2 = #000
brand = brand1

@import 'nib/normalize'

@font-face
  font-family "Icons"
  font-style normal
  src url(fonts/SocialCircles.otf)

@font-face
  font-family "Sofia"
  font-style normal
  src url(fonts/Sofia.otf)

*
  box-sizing border-box

html
  font-size 16px

body
  margin 0
  background-color brand1
  color black
  font-family Arial, Helvetica, sans-serif



.site-header
  position fixed
  top 0
  text-align center
  width 100%
  background-color lColor
  color brand
  text-align center
  border 1px solid brand
  padding 1rem
  height auto
  margin-bottom 10vh

  h1
    margin 0
    font-size 2rem
    // align-content center
  

.nav-bar
  position fixed
  bottom 0
  left 0
  width 100%
  // display flex
  font-family "Icons"
  font-size 5rem
  
  ul
    display flex
    list-style-type none
    margin 0
    padding 0
    border 1px solid brand

  li
    flex 1 1 auto
    border-right 1px solid brand
    &:last-child
      border-right none

  a
    color brand
    text-decoration none
    background-color lColor
    display block
    text-align center



.mainArea
  margin-top 20vh
  text-align center
