//Layout Color
lColor = #222

brand = #319C96
brand1 = #91C9ED
brand2 = #000
brand = brand1

@import 'nib/normalize'

@font-face
  font-family "Icons"
  font-style normal
  src url(fonts/SocialCircles.otf)

@font-face
  font-family "Sofia"
  font-style normal
  src url(fonts/Sofia.otf)

*
  box-sizing border-box

html
  font-size 16px

body
  margin 0
  background-color brand1
  color black
  font-family Arial, Helvetica, sans-serif



.site-header
  position fixed
  top 0
  text-align center
  width 100%
  background-color lColor
  color brand
  text-align center
  border 1px solid brand
  padding 1rem
  height 10vh
  // margin-bottom 10vh

  h1
    margin 0
    font-size 2rem
    // align-content center
  

.nav-bar
  position fixed
  bottom 0
  left 0
  width 100%
  // display flex
  font-family "Icons"
  font-size 4rem
  
  ul
    display flex
    list-style-type none
    margin 0
    padding 0
    border 1px solid brand

  li
    flex 1 1 auto
    border-right 1px solid brand
    &:last-child
      border-right none

  a
    color brand
    text-decoration none
    background-color lColor
    display block
    text-align center



hr 
  // max-width: 100px;
  // margin: 10vh auto;
  border-width: 1px;
  border-color: rgba(34, 34, 34, 0.1);


.mainArea
  margin-top 10vh
  text-align center
  background-color white
  width 80%
  margin 10vh auto
  padding 2rem
  border-radius 5px
  min-height 79vh

.component
  padding 1rem
  line-height 1.2
  letter-spacing 0.025rem

  


// Media Queries

@media screen and (min-width 800px)
  .nav-bar
    font-size 3rem

  .mainArea
    width 80%
    margin 0 auto
    min-height 100vh
    background-color white
  
  body
    background-color brand1 