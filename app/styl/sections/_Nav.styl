.nav
  text-size-adjust none
  font-family Arial, Helvetica, sans-serif
  line-height 200%
  padding 6px 20px 30px
  display flex
  position fixed
  top 0
  padding 0
  width 100%
  background-color: myBlue
  box-shadow 0px 0px 7.5px 2px #000
  color white
  height 4.5rem

  h3
    margin-left 2.5%

  ul
    margin-left auto
    margin-right 4%
    display flex
    flex 1 1 30%

  a
    text-decoration none
    color white
    display flex
    flex-direction column
    justify-content center
    height 100%
    width 100%
    text-align center


  
  li
    flex 0 1 10%
    text-transform capitalize

    &:first-child
      margin-left auto


.nav li:first-child
  margin-left auto

.highlight
  background-color lighten(#000, 20%)
  transition background-color 500ms linear


@media(max-width 900px)
  .nav
    flex-wrap wrap
    height auto

  .nav h3
    text-align center
    flex 1 1 100%

  .nav li
    flex 1 1 auto


@media(max-width 500px)
  .nav ul
    // flex-direction column
    flex-wrap wrap

  .nav li
    flex 1 1 100%
    border 1px solid black
    margin-bottom 5px