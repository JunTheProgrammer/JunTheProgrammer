#about
  width 100%
  height auto
  display flex
  background-color aboutBlack
  padding 3rem 4rem
  font-size 1.2rem
  font-family Arial, Helvetica, sans-serif
  // letter-spacing 0.2rem


  #info
    flex 1 1 70%

    ul
      text-align center
      display flex
      flex-direction column
      justify-content space-around
      min-height 6rem
      margin-bottom 5rem


    li
      max-height 1rem
      margin-bottom 1rem
      text-align center
  

  .img-zone
    flex 1 1 auto
    // max-height 20vh
    // width 20%
    border-radius 25%
    // width auto
    max-width 100%
    height auto
    

@media(max-width 900px)
  #about
    font-size 1rem
    flex-wrap wrap-reverse

    > *
      flex 1 1 100%    

    .img-zone
      // flex 1 0 auto
      width 80%
      max-height 55vh
      text-align center
    
    ul
      padding 0

